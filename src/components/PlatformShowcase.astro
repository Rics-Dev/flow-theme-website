---
import PlatformCard from './PlatformCard.astro';
---

<div class="platform-showcase">
  <div class="platform-grid">
    <PlatformCard
      title="Neovim"
      description="Full-featured Lua colorscheme with extensive plugin integrations."
      image="/screenshots/neovim-preview.png"
      url="/neovim"
      repoUrl="https://github.com/Rics-Dev/flow"
      installCommand='require("flow").setup()'
    />
    
    <PlatformCard
      title="Zed Editor"
      description="Native theme for the Zed editor with all syntax highlighting features."
      image="/screenshots/zed-preview.png"
      url="/zed"
      repoUrl="https://github.com/Rics-Dev/zed-flow-theme"
      installCommand='Add to ~/.config/zed/themes/'
    />
    
    <PlatformCard
      title="Terminal Emulators"
      description="Configurations for Alacritty, Ghostty, Kitty, iTerm2, and Windows Terminal."
      image="/screenshots/alacritty-preview.png"
      url="/terminals"
      installCommand='See terminal-specific instructions'
    />
    
    <PlatformCard
      title="VSCode"
      description="Coming soon - Flow theme for Visual Studio Code."
      image="/screenshots/vscode-preview.png"
      comingSoon={true}
    />
    
    <PlatformCard
      title="JetBrains IDEs"
      description="Coming soon - Flow theme for all JetBrains IDEs."
      image="/screenshots/jetbrains-preview.png"
      comingSoon={true}
    />
  </div>
</div>

<style>
  .platform-showcase {
    margin: 3rem 0;
  }
  
  .platform-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  @media (max-width: 768px) {
    .platform-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
